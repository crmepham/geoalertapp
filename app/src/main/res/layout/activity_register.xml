<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/loginBackground"
    android:orientation="vertical"
    tools:context="crm.geoalertapp.RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vetical_margin_medium"
        android:layout_gravity="center"
        android:src="@drawable/iconLight"/>

    <EditText
        android:layout_width="@dimen/centerWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vetical_margin_small"
        android:inputType="textPersonName"
        android:backgroundTint="@color/inputColour"
        android:text="username"
        android:textColor="@color/inputColour"
        android:ems="10"
        android:id="@+id/registerUsername"
        android:layout_gravity="center_horizontal" />

    <EditText
    android:layout_width="@dimen/centerWidth"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vetical_margin_small"
    android:inputType="text"
    android:backgroundTint="@color/inputColour"
    android:text="password"
    android:textColor="@color/inputColour"
    android:ems="10"
    android:id="@+id/registerPassword"
    android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="@dimen/centerWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vetical_margin_small"
        android:inputType="text"
        android:backgroundTint="@color/inputColour"
        android:text="confirm password"
        android:textColor="@color/inputColour"
        android:ems="10"
        android:id="@+id/registerPasswordConfirm"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="@dimen/centerWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vetical_margin_small"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/inputColour"
        android:text="email"
        android:textColor="@color/inputColour"
        android:ems="10"
        android:id="@+id/registerEmail"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:layout_width="@dimen/centerWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vetical_margin_small"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/inputColour"
        android:text="confirm email"
        android:textColor="@color/inputColour"
        android:ems="10"
        android:id="@+id/registerEmailConfirm"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="@dimen/vetical_margin_medium"
        android:layout_width="@dimen/centerButtonWidth"
        android:layout_height="@dimen/centerButtonHeight"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:textColor="@color/inputColour"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="@dimen/vetical_margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login"
        android:textColor="@color/inputColour"
        android:textSize="@dimen/smallLink"
        android:id="@+id/loginLink"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="@dimen/vetical_margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Help"
        android:textColor="@color/inputColour"
        android:textSize="@dimen/smallLink"
        android:id="@+id/helpLink"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
